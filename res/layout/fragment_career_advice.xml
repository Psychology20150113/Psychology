<?xml version="1.0" encoding="utf-8"?>
<!-- 职业点拨页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_mine_talkabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:text="@string/mine_talkabout" />

    <Button
        android:id="@+id/btn_advance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_mine_talkabout"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:text="@string/advance" />

    <Button
        android:id="@+id/btn_underway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_advance"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:text="@string/underway" />

    <TextView
        android:id="@+id/tv_danmu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/btn_underway"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:text="" />

    <TextView
        android:id="@+id/tv_liaotianneirong"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_danmu"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:text="" />

</RelativeLayout>