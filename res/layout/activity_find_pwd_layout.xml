<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <EditText
        android:id="@+id/phone_et" 
        style="@style/edit_style"
        android:layout_marginTop="20dp"
        android:hint="@string/input_phone"
        android:inputType="phone"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_marginTop="10dp">
	    <EditText 
			android:id="@+id/code_et"	        
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:textSize="18sp"
	        android:hint="@string/verfication_code"
	        android:textColor="@color/black"/>
	    <TextView 
	        android:id="@+id/get_code_tv"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_marginLeft="15dp"
	        android:layout_height="match_parent"
	        android:textSize="18sp"
	        android:gravity="center"
	        android:text="@string/get_verfication_code"
	        android:textColor="#ffffff"
	        android:background="@drawable/bg_red_checked_shape"/>
	</LinearLayout>
	<EditText 
	    android:id="@+id/password_et"
	    style="@style/edit_style"
	    android:layout_marginTop="10dp"
	    android:hint="@string/change_pwd"
	    android:inputType="textPassword"/>
	<EditText 
	    android:id="@+id/second_password_et"
	    style="@style/edit_style"
	    android:layout_marginTop="10dp"
	    android:hint="@string/password_second"
	    android:inputType="textPassword"/>
	<TextView 
	    android:id="@+id/change_ok_tv"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_marginTop="20dp"
	    android:textSize="18sp"
	    android:textColor="#ffffff"
	    android:text="@string/ok"
	    android:gravity="center"
	    android:background="@drawable/bg_save_btn_shape"/>
</LinearLayout>
