<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center"
    android:padding="10dp">
    <TextView 
        android:id="@+id/mission_tv"
        style="@style/text_black18_style"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView 
            android:id="@+id/mission_title_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_checked_item_selector"/>
        <TextView 
            android:id="@+id/mission_title_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_checked_item_selector"/>
    </LinearLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <EditText 
	    android:id="@+id/input_et"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="18sp"
	    android:inputType="text"/>
	<Button 
	    android:id="@+id/commit_btn"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:text="@string/ok"
	    android:background="@drawable/bg_save_btn_shape"/>
</LinearLayout>
