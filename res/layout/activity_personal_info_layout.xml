        	    android:id="@+id/tv_working_city"
        	    style="@style/text_gray16_style"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/rl_diploma"
            android:layout_width="match_parent"
