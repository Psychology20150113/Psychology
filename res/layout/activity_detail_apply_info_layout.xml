<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout 
        android:id="@+id/ll_personal_info"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="5dp">
        <com.dcy.psychology.view.NetImageView
            android:id="@+id/iv_head"
            android:layout_width="83dp"
            android:layout_height="match_parent"/>
    	<View 
    	    android:id="@+id/view_tag"
    	    android:layout_width="10dp"
    	    android:layout_height="match_parent"/>
    	<LinearLayout 
    	    android:layout_width="0dp"
    	    android:layout_weight="1"
    	    android:layout_height="match_parent"
    	    android:gravity="center_vertical"
    	    android:orientation="vertical">
    	    <TextView 
                android:id="@+id/tv_name"
                style="@style/text_black18_style"
                android:singleLine="true"/>
            <TextView 
                android:id="@+id/tv_item_achieve"
                style="@style/text_gray16_style"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:lines="2"
                android:ellipsize="end"/>
    	</LinearLayout>
    	<TextView 
    	    android:id="@+id/tv_statue"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginRight="10dp"
    	    android:layout_gravity="center_vertical"/>
    </LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/divider"/>
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:scrollbars="none"
	    android:layout_below="@id/ll_personal_info"
	    android:layout_above="@+id/ll_tips">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        <TextView 
	            android:id="@+id/tv_top_question"
	            android:layout_width="110dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:text="@string/hopes"/>
	        <TextView 
	            android:id="@+id/tv_question"
	            style="@style/text_black16_style"/>
	        <TextView 
	            android:id="@+id/tv_top_introduce"
	            android:layout_width="110dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:text="@string/introduces"/>
	        <TextView 
	            android:id="@+id/tv_introduce"
	            style="@style/text_black16_style"/>
	        <TextView 
	            android:id="@+id/tv_top_time"
	            android:layout_width="110dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:text="@string/free_time"/>
	        <LinearLayout 
	            android:id="@+id/ll_time"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"/>
	    </LinearLayout>
	</ScrollView>
	<LinearLayout 
	    android:id="@+id/ll_tips"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true">
	    <TextView 
	        android:id="@+id/tv_tips"
	        style="@style/text_gray16_style"
	        android:textSize="13sp"/>
	    <Button 
	        android:id="@+id/btn_agree"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bg_btn_blue"/>
	</LinearLayout>
</RelativeLayout>
