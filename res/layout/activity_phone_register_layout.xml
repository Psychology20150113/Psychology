<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece9e4"
    android:orientation="vertical" 
    android:paddingLeft="40dp"
    android:paddingRight="40dp">
    <EditText
        android:id="@+id/phone_et" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:background="@drawable/bg_edit"
        android:layout_marginTop="55dp"
        android:textColorHint="#8e8e8e"
        android:hint="@string/input_phone"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/password_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:background="@drawable/bg_edit"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

	<EditText 
	    android:id="@+id/second_password_et"
	     android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:background="@drawable/bg_edit"
	    android:layout_marginTop="20dp"
	    android:hint="@string/password_second"
	    android:inputType="textPassword"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_marginTop="20dp">
	    <EditText 
			android:id="@+id/code_et"	        
	        android:layout_width="match_parent"
	        android:layout_weight="1"
	        android:paddingLeft="12dp"
	        android:layout_height="match_parent"
	        android:background="@drawable/bg_edit"
	        android:textSize="18sp"
	        android:hint="@string/verfication_code"
	        android:textColor="@color/black"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        <TextView 
	            android:layout_width="25dp"
	            android:layout_height="match_parent"/>
	         <TextView 
	        android:id="@+id/get_code_tv"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:textSize="16sp"
	        android:gravity="center"
	        android:text="@string/get_verfication_code"
	        android:textColor="#ffffff"
	        android:background="@drawable/bg_red_checked_shape"/>
	       </LinearLayout>
	   
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="51dp">
	    
	    <ImageView 
	        android:id="@+id/iv_agree"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="visible"
	        android:layout_marginLeft="13dp"
	        android:background="@drawable/icon_attention"/>
	    <ImageView 
	        android:id="@+id/iv_noagree"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:layout_marginLeft="13dp"
	        android:background="@drawable/icon_match"/>
	    
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_marginLeft="6dp"
	    android:gravity="center"
	    android:text="我已阅读并同意"/>
	    <TextView 
	    android:id="@+id/tv_agreement"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#fe8d43"
	    android:gravity="center"
	    android:text="@string/agreement"/>
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="和"/>
	    <TextView 
	    android:id="@+id/tv_privacy"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#fe8d43"
	    android:gravity="center"
	    android:text="@string/privacy"/>
	</LinearLayout>
	
	
	<TextView 
	    android:id="@+id/register_tv"
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
	    android:layout_marginTop="14dp"
	    android:textSize="18sp"
	    android:textColor="#ffffff"
	    android:text="@string/register"
	    android:gravity="center"
	    android:background="@drawable/bg_save_btn_shape"/>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="25dp"
		android:gravity="center"
	    android:textSize="11sp"
	    android:textColor="#505050"
	    android:text="@string/code"/>
	<!-- <TextView 
	    android:id="@+id/find_pwd_tv"
	    style="@style/text_black18_style"
	    android:layout_marginTop="20dp"
	    android:textColor="@color/bg_save_btn"
	    android:text="@string/find_pwd"
	    android:layout_gravity="right"/> -->
</LinearLayout>
