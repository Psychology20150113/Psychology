<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdae70"
    android:orientation="vertical" 
>
<ImageView 
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"/>
<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:orientation="vertical"  >

    <EditText
        android:id="@+id/phone_et"
        style="@style/login_edit_style"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="@string/account" >

        <requestFocus />
    </EditText>

         <ImageView 
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="#ffffff"/>
    <EditText 
        android:id="@+id/password_et"
        style="@style/login_edit_style"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="41dp"
        android:hint="@string/password"
        android:inputType="textPassword"/>
     <ImageView 
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="#ffffff"/>
        <EditText 
        android:id="@+id/second_password_et"
        style="@style/login_edit_style"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="41dp"
        android:hint="@string/password_second"       
        android:inputType="textPassword"/>
    <ImageView 
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="#ffffff"/>
    </LinearLayout>
	 <EditText 
        android:id="@+id/code_et"
        style="@style/login_edit_style"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="109dp"
        android:layout_marginRight="109dp"
        android:hint="@string/verfication_code"       />
	    <ImageView 
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:layout_marginLeft="109dp"
        	 android:layout_marginRight="109dp"
             android:background="#ffffff"/>
	
	         <TextView 
	        android:id="@+id/get_code_tv"
	        android:layout_width="134dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="26dp"
	        android:textSize="12sp"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:text="@string/get_verfication_code"
	        android:textColor="#ffffff"
	        android:background="@drawable/bg_red_checked_shape"/>
	         <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="28dp"
	        android:textSize="12sp"
	        android:layout_gravity="center"
	        android:text="@string/code"
	        android:textColor="#ffffff"/>
	    <TextView 
	    android:id="@+id/register_tv"
	    android:layout_width="317dp"
	    android:layout_height="50dp"
	    android:layout_marginTop="80dp"
	    android:textSize="16sp"
	    android:textColor="#ffffff"
	    android:layout_gravity="center"
	    android:text="@string/register"
	    android:gravity="center"
	    android:background="@drawable/bg_save_btn_shape"/>
	   
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:layout_marginTop="11dp">
	    
	    <ImageView 
	        android:id="@+id/iv_agree"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="visible"
	        android:background="@drawable/icon_attention"/>
	    <ImageView 
	        android:id="@+id/iv_noagree"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:background="@drawable/icon_match"/>
	    
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:textSize="12sp"
	    android:text="我已阅读并同意"/>
	    <TextView 
	    android:id="@+id/tv_agreement"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#ffffff"
	    android:textSize="12sp"
	    android:text="@string/agreement"/>
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="12sp"
	    android:text="和"/>
	    <TextView 
	    android:id="@+id/tv_privacy"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="12sp"
	    android:textColor="#ffffff"
	    android:text="@string/privacy"/>
	</LinearLayout>
	
	
	
	<!-- <TextView 
	    android:id="@+id/find_pwd_tv"
	    style="@style/text_black18_style"
	    android:layout_marginTop="20dp"
	    android:textColor="@color/bg_save_btn"
	    android:text="@string/find_pwd"
	    android:layout_gravity="right"/> -->
</LinearLayout>
