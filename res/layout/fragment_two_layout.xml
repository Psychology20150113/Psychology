<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <TextView 
	        style="@style/text_black18_style"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:paddingLeft="10dp"
	        android:gravity="center_vertical"
	        android:text="@string/cure_self"/>
	    <RelativeLayout 
	        android:id="@+id/problem_one_rl"
	        android:layout_width="match_parent"
	        android:layout_height="200dp">
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:src="@drawable/icon_depression"
	            android:scaleType="fitCenter"/>
	    	<TextView 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="30dp"
	    	    android:paddingLeft="10dp"
	    	    android:text="@string/depression"
	    	    android:textSize="18sp"
	    	    android:textColor="#ffffff"
	    	    android:gravity="center_vertical"
	    	    android:background="#B2000000"
	    	    android:layout_alignParentBottom="true"/>
	    	<LinearLayout 
		        android:id="@+id/choose_ll"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:background="#B2000000"
		        android:visibility="gone"
		        android:gravity="center">
		        <LinearLayout 
		            android:id="@+id/student_grow_ll"
		            android:layout_width="93dp"
		            android:layout_height="60dp"
		            android:orientation="vertical"
		            android:gravity="center">
		            <ImageView 
	    	            android:layout_width="21dp"
	    	            android:layout_height="27dp"
	    	            android:src="@drawable/icon_student_one"/>
	    	        <TextView 
	    	            style="@style/text_white14_style"
	    	            android:layout_marginTop="5dp"
	    	            android:text="@string/student_grow_one"/>
		        </LinearLayout>
		        <ImageView 
		            android:layout_width="1dp"
		            android:layout_height="50dp"
		            android:background="#B2ffffff"/>
		        <LinearLayout 
		            android:id="@+id/student_test_ll"
		            android:layout_width="93dp"
		            android:layout_height="60dp"
		            android:orientation="vertical"
		            android:gravity="center">
		            <ImageView 
	    	            android:layout_width="24dp"
	    	            android:layout_height="24dp"
	    	            android:src="@drawable/icon_student_two"/>
	    	        <TextView 
	    	            style="@style/text_white14_style"
	    	            android:layout_marginTop="5dp"
	    	            android:text="@string/student_grow_test"/>
		        </LinearLayout>
		        <ImageView 
		            android:layout_width="1dp"
		            android:layout_height="50dp"
		            android:background="#B2ffffff"/>
		        <LinearLayout 
		            android:id="@+id/student_pic_ll"
		            android:layout_width="93dp"
		            android:layout_height="60dp"
		            android:orientation="vertical"
		            android:gravity="center">
		            <ImageView 
	    	            android:layout_width="23dp"
	    	            android:layout_height="27dp"
	    	            android:src="@drawable/icon_student_three"/>
	    	        <TextView 
	    	            style="@style/text_white14_style"
	    	            android:layout_marginTop="5dp"
	    	            android:text="@string/student_grow_pic"/>
		        </LinearLayout>
		    </LinearLayout>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:id="@+id/problem_two_rl"
	        android:layout_width="match_parent"
	        android:layout_height="200dp">
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:src="@drawable/icon_anxiety"
	            android:scaleType="fitCenter"/>
	    	<TextView 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="30dp"
	    	    android:paddingLeft="10dp"
	    	    android:text="@string/anxiety"
	    	    android:textSize="18sp"
	    	    android:gravity="center_vertical"
	    	    android:textColor="#ffffff"
	    	    android:background="#B2000000"
	    	    android:layout_alignParentBottom="true"/>
	    </RelativeLayout>
	    <TextView 
	        style="@style/text_black18_style"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:paddingLeft="10dp"
	        android:gravity="center_vertical"
	        android:text="@string/realy_doctor"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:paddingTop="20dp"
	        android:paddingBottom="20dp"
	        android:gravity="center"
	        android:background="#E6E6E6"
	        android:orientation="vertical">
	        <ImageView 
	            android:layout_width="97dp"
	            android:layout_height="109dp"
	            android:src="@drawable/icon_doctor_wating"/>
	    	<TextView 
	    	    style="@style/text_gray16_style"
	    	    android:text="@string/doctor_waiting"
	    	    android:layout_marginTop="10dp"/>
	    </LinearLayout>
	</LinearLayout>
</ScrollView>
