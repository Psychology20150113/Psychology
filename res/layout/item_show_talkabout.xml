<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#ffffff"
    android:gravity="center_horizontal">
    <LinearLayout 
        android:id="@+id/ll_item_talkabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:orientation="horizontal">     
        <com.dcy.psychology.view.CornerImageView
            android:id="@+id/iv_header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/ic_launcher" />
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView 
	            android:id="@+id/tv_item_name"
	            style="@style/text_black18_style"
	            android:visibility="visible"
	            android:layout_marginTop="11dp"/>
            <TextView 
	            android:id="@+id/tv_item_achieve"
	            style="@style/text_gray16_style"
	            android:textSize="13sp"
	            android:lines="1"/>
        </LinearLayout>
        <ImageView 
	         android:id="@+id/iv_goto_chat"
	         android:layout_width="51dp"
	         android:layout_height="51dp"
	         android:visibility="gone"
	         android:background="@drawable/bg_goto_chat"
	         android:layout_gravity="center_vertical"
	         android:layout_marginRight="8dp"/>
	</LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_advice"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:visibility="visible"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_ptime"
            style="@style/show_talk_about_tv_style"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:drawableLeft="@drawable/bg_clock"            
            android:drawablePadding="5dp"/>
    </RelativeLayout>
    <TextView 
        style="@style/text_black18_style"
        android:text="@string/hopes"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView 
        android:id="@+id/tv_item_content"
        style="@style/text_gray16_style"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp" 
        android:background="@color/v2_gray"/>
</LinearLayout>
