<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="@string/question_statistics"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#06C7FF"/>
    <TextView 
        android:id="@+id/question_right_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>
    <ListView 
        android:id="@+id/question_answer_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginBottom="20dp">
	    <Button 
	        android:id="@+id/question_end_btn"
	        android:layout_width="130dp"
	        android:layout_height="40dp"
	        android:text="@string/end"
	        android:background="@drawable/bg_blue_selector"/>
	    <Button 
	        android:id="@+id/question_replay_btn"
	        android:layout_width="130dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="@dimen/margin_15d"
	        android:text="@string/replay"
	        android:background="@drawable/bg_blue_selector"/>
	</LinearLayout>
</LinearLayout>
