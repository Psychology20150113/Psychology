<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff">
        <TextView 
            android:id="@+id/platform_title_tv"
            style="@style/text_black18_style"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/divider"/>
    	<LinearLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_marginTop="5dp">
    	    <LinearLayout 
    	        android:id="@+id/student_grow_ll"
    	        android:layout_width="0dp"
    	        android:layout_weight="1"
    	        android:layout_height="match_parent"
    	        android:orientation="vertical"
    	        android:gravity="center"
    	        android:background="@color/bg_student_one">
    	        <ImageView 
    	            android:layout_width="21dp"
    	            android:layout_height="27dp"
    	            android:src="@drawable/icon_student_one"/>
    	        <TextView 
    	            style="@style/text_white14_style"
    	            android:layout_marginTop="5dp"
    	            android:text="@string/student_grow_one"/>
    	    </LinearLayout>
    	    <LinearLayout 
    	        android:id="@+id/student_test_ll"
    	        android:layout_width="0dp"
    	        android:layout_weight="1"
    	        android:layout_height="match_parent"
    	        android:orientation="vertical"
    	        android:gravity="center"
    	        android:layout_marginLeft="5dp"
    	        android:background="@color/bg_student_two">
    	        <ImageView 
    	            android:layout_width="24dp"
    	            android:layout_height="24dp"
    	            android:src="@drawable/icon_student_two"/>
    	        <TextView 
    	            style="@style/text_white14_style"
    	            android:layout_marginTop="5dp"
    	            android:text="@string/student_grow_test"/>
    	    </LinearLayout>
    	    <LinearLayout 
    	        android:id="@+id/student_pic_ll"
    	        android:layout_width="0dp"
    	        android:layout_weight="1"
    	        android:layout_height="match_parent"
    	        android:orientation="vertical"
    	        android:gravity="center"
    	        android:layout_marginLeft="5dp"
    	        android:background="@color/bg_student_three">
    	        <ImageView 
    	            android:layout_width="23dp"
    	            android:layout_height="27dp"
    	            android:src="@drawable/icon_student_three"/>
    	        <TextView 
    	            style="@style/text_white14_style"
    	            android:layout_marginTop="5dp"
    	            android:text="@string/student_grow_pic"/>
    	    </LinearLayout>
    	</LinearLayout>
    </LinearLayout>

</LinearLayout>
