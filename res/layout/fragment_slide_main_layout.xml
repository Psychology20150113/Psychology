<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="176dp">
		<android.support.v4.view.ViewPager
		    android:id="@+id/banner_vp" 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
		<com.dcy.psychology.view.PageIndicatorView
		    android:id="@+id/banner_indicator" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginBottom="10dp"/>        
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="87dp">
	    <LinearLayout 
	        android:id="@+id/platform_one_ll"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical">
	        <ImageView 
	            android:layout_width="70dp"
	            android:layout_height="48dp"
	            android:layout_marginLeft="10dp"
	            android:src="@drawable/icon_platform01"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/platform_one"
	            android:textColor="#349545"
	            android:textSize="24sp"/>
	    </LinearLayout>
	    <ImageView 
	        android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:background="@color/divider"/>
	    <LinearLayout 
	        android:id="@+id/platform_two_ll"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical">
	        <ImageView 
	            android:layout_width="57dp"
	            android:layout_height="52dp"
	            android:layout_marginLeft="10dp"
	            android:src="@drawable/icon_platform02"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/platform_two"
	            android:textColor="#0caaf5"
	            android:textSize="24sp"/>
	    </LinearLayout>
	</LinearLayout>
	<ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/divider"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="87dp">
	    <LinearLayout 
	        android:id="@+id/game_one_tv"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <ImageView 
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:src="@drawable/icon_brush"/>
	        <TextView 
	            style="@style/text_black20_style"
	            android:layout_marginTop="10dp"
	            android:text="@string/game_one"/>
	    </LinearLayout>
	    <ImageView 
	        android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:background="@color/divider"/>
	    <LinearLayout 
	        android:id="@+id/game_two_tv"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <ImageView 
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:src="@drawable/icon_brain"/>
	        <TextView 
	            style="@style/text_black20_style"
	            android:layout_marginTop="10dp"
	            android:text="@string/thought_reading"/>
	    </LinearLayout>
	    <ImageView 
	        android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:background="@color/divider"/>
	    <LinearLayout 
	        android:id="@+id/game_more_tv"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <ImageView 
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:src="@drawable/icon_platform_more"/>
	        <TextView 
	            style="@style/text_black20_style"
	            android:layout_marginTop="10dp"
	            android:text="@string/more"/>
	    </LinearLayout>
	</LinearLayout>
	<ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/divider"/>
	<com.dcy.psychology.view.PullRefreshListView 
	    android:id="@+id/pull_refresh_lv"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginLeft="10dp"/>
</LinearLayout>
