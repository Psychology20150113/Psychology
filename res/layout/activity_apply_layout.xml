<?xml version="1.0" encoding="utf-8"?>

<!-- 申请约聊页面 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="13dp"
	        android:background="@color/v2_divider"/>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <TextView 
		        android:id="@+id/tv_hope"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffffff"
		        android:paddingLeft="20dp"
		        android:paddingTop="15dp"
		        android:paddingBottom="7dp"
		        android:textColor="#33353a"
		        android:text="@string/hope"
		        android:textSize="13sp"/>
	         <TextView 
	             android:layout_width="48dp"
	             android:layout_height="16dp"
	             android:background="@drawable/bg_tv_number"
	             android:text="120字"
	             android:textColor="#ffffff"
	             android:textSize="13sp"
	             android:gravity="center"
	             android:layout_marginTop="13dp"
	             android:layout_marginRight="15dp"
	             android:layout_alignParentRight="true"
	             />
	    </RelativeLayout>
	   	<View 
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_marginRight="17dp"
	    	android:layout_marginLeft="17dp"
	        android:background="#5991bf"/>
    	<EditText
    	    android:id="@+id/et_hope"
    	    android:layout_width="match_parent"
    	    android:layout_height="131dp"
    	    android:layout_marginLeft="20dp"
    	    android:layout_marginRight="20dp"
    	    android:background="#ffffff"
    	    android:paddingTop="11dp"
    	    android:ems="10"
    	    android:gravity="left"
    	    android:hint="@string/such_us"
    	    android:textSize="16sp" >
    	</EditText>
    	<View 
    	    android:layout_width="match_parent"
    	    android:layout_height="1px"
    	    android:background="@color/v2_gray"/>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="17dp"
	        android:background="@color/v2_divider"/>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	         <TextView 
	        android:id="@+id/tv_introduce"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#ffffff"
	        android:paddingLeft="20dp"
	        android:paddingTop="15dp"
	        android:paddingBottom="7dp"
	        android:textColor="#33353a"
	        android:text="@string/introduce"
	        android:textSize="13sp"
	        />
	         <TextView 
	             android:layout_width="48dp"
	             android:layout_height="16dp"
	             android:background="@drawable/bg_tv_number"
	             android:text="120字"
	             android:textColor="#ffffff"
	             android:textSize="13sp"
	             android:gravity="center"
	             android:layout_marginTop="13dp"
	             android:layout_marginRight="15dp"
	             android:layout_alignParentRight="true"
	             />
	    </RelativeLayout>
    	<View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="17dp"
        	android:layout_marginLeft="17dp"
            android:background="#5991bf"/>
    	<EditText
    	    android:id="@+id/et_ictroduce"
    	    android:layout_width="match_parent"
    	    android:layout_height="113dp"
    	    android:layout_marginLeft="20dp"
    	    android:layout_marginRight="20dp"
    	    android:background="#ffffff"
    	    android:paddingTop="11dp"
    	    android:ems="10"
    	    android:gravity="left"
    	    android:hint="@string/such_us_introduce"
    	    android:textSize="16sp" >
    	</EditText>
    	<View 
    	    android:layout_width="match_parent"
    	    android:layout_height="1px"
    	    android:background="@color/v2_gray"/>
    	<View 
    	    android:layout_width="match_parent"
    	    android:layout_height="13dp"
    	    android:background="@color/v2_divider"/>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:background="@color/v2_divider"
	        android:gravity="center">
	   	    <LinearLayout 
	   	        android:layout_width="match_parent"
	   	        android:layout_height="wrap_content"
	   	        android:gravity="center_vertical">
	   	        <TextView
		    	    android:id="@+id/tv_addtime"
		    	    android:layout_width="0dp"
		    	    android:layout_weight="1"
		    	    android:layout_height="wrap_content"
		    	    android:gravity="center"
		    	    android:text="@string/convenience"
		    	    android:textSize="14sp" />
	   	        <ImageView 
	   	            android:id="@+id/iv_add_time"
		    	    android:layout_width="30dp"
		    	    android:layout_height="30dp"
		    	    android:src="@drawable/bg_addtime"
		    	    android:scaleType="centerInside"/>
	   	    </LinearLayout>
	   	    <View 
	   	        android:layout_width="match_parent"
	   	        android:layout_height="1dp"
	   	        android:background="#5991bf"/>
	   		<LinearLayout
	   		    android:id="@+id/ll_time_container" 
	   		    android:layout_width="match_parent"
	   		    android:layout_height="wrap_content"
	   		    android:orientation="vertical">
	   		</LinearLayout>
	    	<Button
		        android:id="@+id/btn_submit"
		        android:layout_width="267dp"
		        android:layout_height="51dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
		        android:background="@drawable/bg_btn10"
		        android:visibility="visible"
		        android:textColor="#ffffff"
		        android:textSize="16sp"
		        android:text="@string/submit" />
	    </LinearLayout>
    </LinearLayout>
</ScrollView>
