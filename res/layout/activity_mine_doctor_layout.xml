<?xml version="1.0" encoding="utf-8"?>
<!-- 我的心情师页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RadioGroup 
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:checkedButton="@+id/rb_concerned"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_concerned"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_line_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/concerned"
            android:textColor="@color/tab_color_selector" />

        <RadioButton
            android:id="@+id/rb_applied"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_line_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/applied"
            android:textColor="@color/tab_color_selector" />

    </RadioGroup>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>
	<android.support.v4.view.ViewPager
	    android:id="@+id/vp_mine_doctor"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"/>
</LinearLayout>
