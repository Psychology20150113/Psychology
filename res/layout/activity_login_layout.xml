<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FEB97E">
    
    <ImageView 
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"/>
<!-- 
         <com.dcy.psychology.view.CornerImageView 
	        android:id="@+id/iv_header"
	        android:layout_width="63dp"
	        android:layout_height="63dp"
	        android:layout_marginTop="49dp"
	        android:layout_gravity="center"
	        android:src="@drawable/ic_launcher"/> -->
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginTop="42dp"
	            android:src="@drawable/icon_login_iv"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical" 
        android:layout_marginLeft="23dp" 
        android:layout_marginRight="23dp">
         
         <EditText 
        android:id="@+id/account_et"
       style="@style/login_edit_style"
       android:layout_marginBottom="7dp"
        android:hint="@string/account"/>
         <View 
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="#ffffff"/>
    <EditText 
        android:id="@+id/psw_et"
        style="@style/login_edit_style"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="41dp"
        android:hint="@string/password"      
        android:inputType="textPassword"/>
    <View 
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="#ffffff"/>
    </LinearLayout>

    <Button 
        android:id="@+id/login_btn"
      	style="@style/login_button_style"
        android:text="@string/login"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/find_pwd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#ffffff"       
        android:layout_marginTop="13dp"
        android:layout_gravity="center"
        android:text="@string/find_pwd" />
    <!-- style="@style/text_black18_style" -->
    <Button 
        android:id="@+id/register_btn"
       style="@style/login_button_style"
       android:layout_marginTop="84dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="@string/newregister"
        android:textSize="16sp"/>

</LinearLayout>
