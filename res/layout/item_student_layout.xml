<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:orientation="vertical" >
    <View 
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/v2_divider"/>
    <ImageView
	        android:id="@+id/iv_st_header"
	        android:layout_width="84dp"
	        android:layout_height="84dp"
	        android:layout_marginTop="5dp"
	        android:src="@drawable/ic_launcher"/>
    <View 
            android:id="@+id/view_applying"
            android:layout_width="11dp"
            android:layout_height="84dp"
            android:visibility="visible"
             android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_st_header"
            android:background="#ec833c"/>
    <TextView 
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"        
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/view_applying"
        android:textSize="16sp"
        android:text=""/>
    <TextView 
        android:id="@+id/st_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"        
        android:layout_marginLeft="10dp"
        android:layout_below="@id/student_name"
        android:layout_toRightOf="@id/view_applying"
        android:singleLine="true"  
		android:ellipsize="end"  
        android:lines="2"
        android:textColor="@color/v2_gray"
        android:textSize="13sp"
        android:text=""/>
    <TextView 
        android:id="@+id/st_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:textSize="13sp"
        android:layout_marginRight="10dp"
        android:text=""/>
    <ImageView 
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:background="@drawable/bg_slide_menu_count"
        android:layout_toLeftOf="@id/st_education"
        android:layout_marginRight="7dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
