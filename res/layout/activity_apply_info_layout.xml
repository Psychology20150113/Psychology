<?xml version="1.0" encoding="utf-8"?>
<!-- 申请信息、申请状态页面 -->
<!-- 当申请状态改变时直接在Activity中改变几个TextView的background -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v2_divider"
    android:orientation="vertical" >
    
    <include layout="@layout/item_claimer_layout"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <TextView 
            android:id="@+id/tv_hopes"
			style="@style/apply_info_tv_style"
			android:layout_marginTop="13sp"
            android:text="@string/hopes"/>
        <View 
            style="@style/view_apply_info_style"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/v2_gray"
            android:textSize="16sp"
            android:text="@string/such_us"/>
        <TextView 
			style="@style/apply_info_tv_style"
			android:layout_marginTop="20sp"
            android:text="@string/introduces"/>
        <View 
            style="@style/view_apply_info_style"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/v2_gray"
            android:textSize="16sp"
            android:text="@string/such_us_introduce"/>
         <TextView 
			style="@style/apply_info_tv_style"
			android:layout_marginTop="20sp"
            android:text="@string/free_time"/>
        <View 
            style="@style/view_apply_info_style"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView 
                android:id="@+id/tv_free_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="18dp"
                android:textColor="@color/v2_gray"
                android:textSize="16sp"
                android:text="7月29日"
                />
            <TextView 
                android:id="@+id/tv_free_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
				android:textSize="16sp"
				android:textColor="@color/v2_gray"
                android:text="@string/time_slot3"/>
            <TextView 
                android:id="@+id/tv_free_am1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:layout_marginRight="18dp"
                android:layout_marginTop="9dp"
				android:textSize="16sp"
				android:textColor="@color/v2_gray"
                android:text="AM."/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView 
                android:id="@+id/tv_free_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="18dp"
                android:textColor="@color/v2_gray"
                android:textSize="16sp"
                android:text="7月30日"
                />
            <TextView 
                android:id="@+id/tv_free_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
				android:textSize="16sp"
				android:textColor="@color/v2_gray"
                android:text="@string/time_slot3"/>
            <TextView 
                android:id="@+id/tv_free_am2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:layout_marginRight="18dp"
                android:layout_marginTop="9dp"
				android:textSize="16sp"
				android:textColor="@color/v2_gray"
                android:text="AM."/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cdcec4"/>
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        >
        <Button 
            android:id="@+id/btn_accept"
            android:layout_width="167dp"
            android:layout_height="48dp"
            android:visibility="visible"
            android:background="@drawable/rl_career_advice_3"
            android:layout_marginBottom="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/accept"/>
        <!-- 预约成功时显示 -->
        <TextView 
            android:id="@+id/tv_congratulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:textColor="@color/v2_gray"
            android:text="@string/congratulation"/>
        <!-- 预约过期时显示 -->
        <TextView 
            android:id="@+id/tv_sorry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:visibility="gone"
            android:textColor="@color/v2_gray"
            android:text="@string/sorry"/>
        <TextView 
            android:id="@+id/tv_applying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:visibility="gone"
            android:textColor="@color/v2_gray"
            android:text="@string/now"/>
    </LinearLayout>
    

</LinearLayout>
