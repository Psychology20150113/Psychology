<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView 
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_banner_indicat_select"/>
        <TextView 
            android:id="@+id/item_label_tv"
            style="@style/text_black16_style"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="175dp"
	    android:layout_marginLeft="35dp"
	    android:layout_marginRight="10dp">
	    <ImageView 
	        android:id="@+id/item_platform_show_iv"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:gravity="center_vertical"
	        android:background="#B2000000"
	        android:layout_alignParentBottom="true">
	        <TextView 
	            android:id="@+id/item_platform_name_tv"
	            style="@style/text_white18_style"
	            android:layout_marginLeft="10dp"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/choose_ll"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#B2000000"
	        android:visibility="gone"
	        android:gravity="center">
	        <LinearLayout 
	            android:id="@+id/student_grow_ll"
	            android:layout_width="93dp"
	            android:layout_height="60dp"
	            android:orientation="vertical"
	            android:gravity="center">
	            <ImageView 
    	            android:layout_width="21dp"
    	            android:layout_height="27dp"
    	            android:src="@drawable/icon_student_one"/>
    	        <TextView 
    	            style="@style/text_white14_style"
    	            android:layout_marginTop="5dp"
    	            android:text="@string/student_grow_one"/>
	        </LinearLayout>
	        <ImageView 
	            android:layout_width="1dp"
	            android:layout_height="50dp"
	            android:background="#B2ffffff"/>
	        <LinearLayout 
	            android:id="@+id/student_test_ll"
	            android:layout_width="93dp"
	            android:layout_height="60dp"
	            android:orientation="vertical"
	            android:gravity="center">
	            <ImageView 
    	            android:layout_width="24dp"
    	            android:layout_height="24dp"
    	            android:src="@drawable/icon_student_two"/>
    	        <TextView 
    	            style="@style/text_white14_style"
    	            android:layout_marginTop="5dp"
    	            android:text="@string/student_grow_test"/>
	        </LinearLayout>
	        <ImageView 
	            android:layout_width="1dp"
	            android:layout_height="50dp"
	            android:background="#B2ffffff"/>
	        <LinearLayout 
	            android:id="@+id/student_pic_ll"
	            android:layout_width="93dp"
	            android:layout_height="60dp"
	            android:orientation="vertical"
	            android:gravity="center">
	            <ImageView 
    	            android:layout_width="23dp"
    	            android:layout_height="27dp"
    	            android:src="@drawable/icon_student_three"/>
    	        <TextView 
    	            style="@style/text_white14_style"
    	            android:layout_marginTop="5dp"
    	            android:text="@string/student_grow_pic"/>
	        </LinearLayout>
	    </LinearLayout>
	</RelativeLayout>
</LinearLayout>
